<Window x:Class="Backgammon_v2.PlayerLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Player 1 Login" Height="200" Width="300">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Player 1 Login" FontWeight="Bold" HorizontalAlignment="Center" Margin="0 0 0 10"/>
            <TextBlock Text="Username:"/>
            <TextBox x:Name="UsernameTextBox"/>
            <TextBlock Text="Password:"/>
            <PasswordBox x:Name="PasswordBox"/>
            <Button Content="Login" Click="LoginButton_Click" Margin="0 10 0 0"/>
        </StackPanel>
    </Grid>
</Window>
